<html>
    <head>
       <title><%= title%></title>
       <meta name="viewport" content="width=device-width, initial-scale=1">
       <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
      <!--our css should be below all other styles so that we can be able to override it-->
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">
      <link rel="stylesheet" href="/css/home.css">
      
    </head>

    <body>
         <h1 id="heading"><%= title%></h1>
         <br>
         <div id="list">
         <form action="/Add-task" method="POST" id="task">
            <div id="input-form">
            <div class="fill">
            <label  class="input">DESCRIPTION</label>
            
            <input class="w3-input w3-border" id="descrip" type="text" name="description" placeholder="What do you need to do?" required>
            </div>
            <div class="fill">    
            <label for="Choose a Category" class="input">CATEGORY</label>
            
            <select name="category" class="w3-input w3-border" required>
                <option value="School">School</option>
                <option value="Work">Work</option>
                <option value="Personal">Personal</option>
            </select>
            </div>
            <div class="fill">
            <label for="deadline" class="input">DUE DATE</label>
            <input name="deadline" type="date" class="w3-input w3-border" id="date"  required >
            </div>

            <button class=" w3-block  w3-ripple w3-padding w3-hover-orange" type="Submit"><i class="fas fa-plus"></i>&ensp;Add Task</button>
           </div>
         </form>
         </div>
          <ul>
             <% for(let i of list){ %>
                 <li>
                   <div>
                   <p><i class="far fa-clipboard"></i>&emsp;<%= i.description %></p>
                   <p><i class="fas fa-calendar-alt"></i>&emsp13;<%= i.date %></p>
                   <div id="category"><%= i.category %></div>                   
                   </div>

                   <!-- delete -->
                   <div id="delete-button">
                    <a href="/delete-list/?id=<%= i._id %>">
                        <i class="fas fa-trash"></i> </a>
                  </div>
                 </li>
                 <hr>
            <% } %>
          </ul>
        </div>
    </body>
</html>